# Set bash kit environment variables
export BASH_KIT_DIR="/opt/bash_kit"
export BASH_PROFILE="$HOME/.bash_profile"
export DRUSH_PATH="/opt/local/drush"
export DB_USER="root"
export DB_PASS=""
export PATH=$DRUSH_PATH:$PATH

# Import bash_kit
if [ "$BASH" -o "$ZSH" ]; then
  if [ -f "$BASH_KIT_DIR/profile" ]; then
    . "$BASH_KIT_DIR/profile"
  fi
fi
