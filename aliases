# Shortcuts
alias r="source $BASH_PROFILE"
alias p="$EDITOR $BASH_PROFILE"
alias a="$EDITOR $BASH_KIT_ALIASES"
alias bk="cd $BASH_KIT_DIR"
alias ip="printf 'Your IP Address is: '; curl http://icanhazip.com/"

# ls
alias l="ls"
alias ll="ls $LS_OPTIONS -Flh"
alias la="ls $LS_OPTIONS -a"
alias lla="ls $LS_OPTIONS -la"
alias lt="ls $LS_OPTIONS -lt"
alias ld="ls $LS_OPTIONS -h */"
alias lc="ls -1 | wc -l"

# Remappings
alias grep="grep $GREP_OPTIONS"
alias df="df -h"
alias c="clear"
alias h="history"
alias g="grepr"
alias v="vim"

# git
alias gc='ci'
alias ga='add'
alias gau='add -u'
alias pull='git pull'
alias push='git push'
alias gpom='git push origin master'
alias git-color='git config color.ui true'
alias switch-origin='git remote rm origin; git remote add origin'

# VCS
alias praise="blame"
alias dif-count="dif | count_changes"

# Drush
alias drush="$DRUSH_PATH/drush"
alias cc='drush cc all'
alias cct='drush cc theme'
alias f='drush features'
alias fu='drush features-update -y'
alias fr='drush features-revert -y'

# Safety net
alias rm='rm -i'
alias rr="rm -ri"
alias cp='cp -i'
alias mv='mv -i'

# Scripts
alias sql="$BASH_KIT_DIR/bin/sql.sh"
alias prepare="$BASH_KIT_DIR/bin/prepare.sh"
