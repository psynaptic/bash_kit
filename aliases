
# shortcuts
alias r="source $BASH_PROFILE"
alias p="$EDITOR $BASH_PROFILE"
alias a="$EDITOR $BASH_KIT_ALIASES"
alias bk="cd $BASH_KIT_DIR"
alias ip="printf 'Your IP Address is: '; curl http://icanhazip.com/"

# list
alias l="ls"
alias ll="ls $LS_OPTIONS -Flh"
alias la="ls $LS_OPTIONS -a"
alias lla="ls $LS_OPTIONS -la"
alias lt="ls $LS_OPTIONS -lt"
alias ld="ls $LS_OPTIONS -h */"
alias lc="ls -1 | wc -l"

# remap
alias grep="grep $GREP_OPTIONS"
alias df="df -h"
alias c="clear"
alias h="history"
alias g="grepr"
alias v="vim"

# git
alias gc='ci'
alias gpom='git push origin master'
alias pull='git pull origin master'
alias push='git push origin master'
alias ga='add'
alias gau='add -u'
alias git-color='git config --global color.diff auto; git config --global color.status auto; git config --global color.branch auto;'

# vcs
alias dif-count='echo `dif . | grep ^[+-][^+-] | wc -l` altered: "`dif | grep "^-[^-]" | wc -l` removed, `dif | grep "^+[^+]" | wc -l;` added";'
alias praise="blame"
alias diff-count="dif-count"

# drush
alias drush="$DRUSH_PATH/drush"
alias cc='drush cc all'
alias cct='drush cc theme'
alias f='drush features'
alias fu='drush features-update -y'
alias fr='drush features-revert -y'

# safety net
alias rm='rm -i'
alias rr="rm -ri"
alias cp='cp -i'
alias mv='mv -i'

# included scripts
alias sql="$BASH_KIT_DIR/bin/sql.sh"
alias prepare="$BASH_KIT_DIR/bin/prepare.sh"
alias cvs-release-notes="$BASH_KIT_DIR/bin/cvs-release-notes.php"


